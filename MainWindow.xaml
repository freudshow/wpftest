<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:DataGridContextMenuViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock x:Name="ReceiveStatusTextBlock" Height="40" Width="600" Margin="3" />
            <TextBlock x:Name="DeviceStatusTextBlock" Height="40" Width="600" Margin="3" />
            <TextBlock x:Name="ParseStatusTextBlock" Height="40" Width="600" Margin="3" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Content="Click" Click="RestartButton_Click" />
        </StackPanel>
        <DataGrid Grid.Row="2"
                x:Name="MyDataGrid"
                ItemsSource="{Binding DataItems}"
                SelectionUnit="Cell"
                MouseRightButtonDown="DataGrid_MouseRightButtonDown"
                AutoGenerateColumns="False"
                CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="序号" Binding="{Binding Id, Mode=TwoWay}" Width="60" />
                <DataGridTextColumn Header="商品名称" Binding="{Binding Name, Mode=TwoWay}" Width="*" />
                <DataGridTextColumn Header="价格（元）" Binding="{Binding Price, Mode=TwoWay, StringFormat=F2}" Width="100" />
                <DataGridTextColumn Header="创建时间" Binding="{Binding CreateTime, Mode=TwoWay, StringFormat=yyyy-MM-dd}" Width="120" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu ItemsSource="{Binding ContextMenuItems}">
                    <ContextMenu.ItemTemplate>
                        <DataTemplate>
                            <MenuItem Header="{Binding Header}" Command="{Binding Command}" />
                        </DataTemplate>
                    </ContextMenu.ItemTemplate>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>