<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock x:Name="ReceiveStatusTextBlock" Height="40" Width="600" Margin="3" />
            <TextBlock x:Name="DeviceStatusTextBlock" Height="40" Width="600" Margin="3" />
            <TextBlock x:Name="ParseStatusTextBlock" Height="40" Width="600" Margin="3" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Content="Click" Click="RestartButton_Click" />
        </StackPanel>
    </Grid>
</Window>